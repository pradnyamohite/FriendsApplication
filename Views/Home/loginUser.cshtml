@{
}
<div class="container">
    <form class="form-horizontal" asp-action="loginUser">
        <div class="row">
            <div class="form-group">
                <label asp-for="MobileNo" class="control-label">Mobile Number</label>
                <input asp-for="MobileNo" class="form-control" type="text" />
                <span asp-validation-for="MobileNo" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <label  asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <input type="submit" value="Login" />
            </div>
        </div>
        <div class="row">
            <div class="form-group">
                <p>If new user ? <a href="Home/Index"> Sign Up </a></p>
            </div>
        </div>
    </form>
</div>